<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCategoryWiseDish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/lightgray"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Dish Image -->
        <ImageView
            android:id="@+id/ivcategorywisedishimage"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/category_wise_dish_sample"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Restaurant Name -->
        <TextView
            android:id="@+id/tvCategoryWiseDishRestaurantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sample Restaurant"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/aldrich"
            app:layout_constraintTop_toBottomOf="@id/ivcategorywisedishimage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvCategoryWiseDishRestaurantRating"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp" />

        <!-- Rating Badge -->
        <TextView
            android:id="@+id/tvCategoryWiseDishRestaurantRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.4 ★"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_rating"
            app:layout_constraintBaseline_toBaselineOf="@id/tvCategoryWiseDishRestaurantName"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dish Name -->
        <TextView
            android:id="@+id/tvCategoryWiseDishDishName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Paneer Butter Masala"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvCategoryWiseDishRestaurantName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Category & Price Row -->
        <LinearLayout
            android:id="@+id/llCategoryPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvCategoryWiseDishDishName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCategoryWiseDishDishCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="North Indian"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/aldrich" />

            <TextView
                android:id="@+id/tvCategoryWiseDishDishPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹250"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:fontFamily="@font/aldrich" />
        </LinearLayout>

        <!-- Offer Badge -->
        <TextView
            android:id="@+id/tvCategoryWiseDishDishoffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20% OFF"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_offer"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/llCategoryPrice"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvCategoryWiseDishDishDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rich creamy paneer gravy cooked with butter and spices."
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:fontFamily="@font/aldrich"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvCategoryWiseDishDishoffer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Order Now Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrderNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Now"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/icon_add"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            android:backgroundTint="@color/primaryColor"
            app:layout_constraintTop_toBottomOf="@id/tvCategoryWiseDishDishDescription"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
