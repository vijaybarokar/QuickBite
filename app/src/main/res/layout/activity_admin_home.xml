<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CategoryFragment"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/svcategoryfragmentsearchcategory"
        android:queryHint="Search Category"
        android:iconifiedByDefault="false"
        android:layout_margin="16sp"
        android:padding="8dp"
        android:background="@drawable/etbgshape"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rvcategoryShowMultipleCategory"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvAdminHomeCustomerLocation"
        app:cardBackgroundColor="@color/card_background_color"
        app:cardElevation="16sp"
        app:cardCornerRadius="16sp"
        android:layout_margin="16sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCustomerLocation"
                android:text="View All Customer Location in Map"
                android:textSize="16sp"
                android:textStyle="normal"
                android:fontFamily="@font/aldrich"
                android:drawableLeft="@drawable/icon_location"
                android:drawablePadding="10sp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvcategoryNoCategoryAvailable"
        android:text="No Category Available"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/aldrich"
        android:visibility="gone"/>

</LinearLayout>